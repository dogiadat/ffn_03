<h1><%= @user.name %></h1>
<div id="user-profile">
  <div id="user-info">
    <%= image_tag @user.avatar.medium.url, size: Settings.users.avatar_size %>
    <table class="table-info-template">
      <% [:name, :email, :coin].each do |attribute| %>
        <tr>
          <td class="attribute"><%= t "." + attribute.to_s %></td>
          <td class="value" %>
            <%= @user.send(attribute) || "-" %>
          </td>
        </tr>
      <% end %>
    </table>
    <% if user_signed_in? && @user.is?(current_user) %>
      <%= link_to edit_user_registration_path do %>
        <span class="glyphicon glyphicon-pencil"></span>
        <%= t ".update_profile" %>
      <% end %>
    <% end %>
  </div>
  <div id="user-content">
    <h2><%= t ".activities" %></h2>
    <div class="activities">
      <% if @activities.any? %>
        <% @activities.each do |activity| %>
        <div class="activity">
          <%= image_tag @user.avatar.small.url, class: "pull-left" %>
            <div class="content">
              <strong><%= activity.owner.name %></strong>
              <%= show_activity activity %>
              <p class="time-ago">
                <%= time_ago_in_words activity.created_at %>
                <%= t ".time_ago" %>
              </p>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="activity">
          <%= t ".no_activity" %>
        </div>
      <% end %>
      <%= paginate @activities %>
    </div>
  </div>
</div>
