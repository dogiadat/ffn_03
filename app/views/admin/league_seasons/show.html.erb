<div class="show-league-season row">
  <h1 class="center"><%= @league_season.name %></h1>
  <hr>
  <%= link_to new_admin_league_season_match_path(@league_season),
    class: "btn btn-primary no-radius pull-right"  do %>
    <i class="glyphicon glyphicon-plus"></i>
    <span><%= t ".new_match" %></span>
  <% end %>
  <div class="clearfix"></div>
  <div class="schedule col-md-6">
    <div id="schedule-table-name">
      <span class="glyphicon glyphicon-calendar"></span>
      <%= @league_season.name + " " + @league_season.year.to_s + " " + t(".schedule")%>
    </div>
    <table id="table-matches" class="table table-striped table-bordered">
      <% @matches.each do |date, matches| %>
        <tr><td colspan="5" class="start-date"><%= date %></td></tr>
        <% matches.each do |match| %>
          <tr>
            <td class="start-time">
              <%= match.start_time.strftime "%H:%M" %>
            </td>
            <td class="team1">
              <%= match.team1.name %>
            </td>
            <td class="result">
              <span class="goals-team1"><%= match.team1_goal || "?" %></span>-
              <span class="goals-team2"><%= match.team2_goal || "?" %></span>
              <br>
            <td class="team2">
              <%= match.team2.name %>
            </td>
            <td class="action">
              <%= link_to edit_admin_match_path(match), title: t(".update_match"),
                data: {toggle: "tooltip"} do %>
                <span class="glyphicon glyphicon-play-circle"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>

  <div class="rank col-md-6">
    <div id="ranking-table-name">
      <span class="glyphicon glyphicon-list-alt"></span>
      <%= @league_season.name + " " + @league_season.year.to_s + " " + t(".rankings")%>
    </div>
    <table id="rank-table" class="table table-striped table-bordered">
      <thead>
        <th class="stats"><%= t ".rank" %></th>
        <th><%= t ".team_name" %></th>
        <%= Team.header_for_stats :total_matches, :win_matches, :draw_matches,
          :lose_matches, :goals, :lose_goals, :offset, :score %>
      </thead>
      <tbody>
        <% @rank.each_with_index do |team| %>
          <tr>
            <td class="stats"><%= team.rank %></td>
            <td><%= team.name %></td>
            <%= team.bind_stats :total_matches, :win_matches, :draw_matches,
              :lose_matches, :goals, :lose_goals, :offset, :score %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
