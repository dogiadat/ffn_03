<div class="team-heading row center">
  <div class="team1 col-sm-4">
    <h2><%= t ".team 1" %></h2>
  </div>
  <div class="image col-sm-3">
    <%= image_tag "league-icon.png", size: Settings.match.ball_size %>
  </div>
  <div class="team2 col-sm-4">
    <h2><%= t ".team 2" %></h2>
  </div>
</div>
<div class="form">
  <%= form_for [:admin, @league_season, @match] do |f| %>
    <%= render "shared/error_messages", object: @match %>

    <div class="chose-team form-inline">
      <div class="team1 form-group">
        <%= f.select :team1_id, @teams, {include_blank: t(".chose_team1")},
          class: "form-control" %>
      </div>
      <div class="team2 form-group">
        <%= f.select :team2_id, @teams, {include_blank: t(".chose_team2")}, class: "form-control" %>
      </div>
    </div>
    <div class="form-group start-time">
      <%= f.label :start_time %>
      <%= f.datetime_local_field :start_time, class: "form-control center" %>
    </div>

    <div class="form-group status">
      <label><%= t ".status" %></label>
      <%= f.select :status, @statuses, {include_blank: t(".chose_status")},
        class: "form-control", id: "select-status" %>
    </div>

    <div class="goals hidden">
      <div class="team1-goals">
        <%= f.number_field :team1_goal, step: 1, min: 0, class: "form-control",
          placeholder: "0" %>
      </div>
      <div id="space">-</div>
      <div class="team2-goals">
        <%= f.number_field :team2_goal, step: 1, min: 0, class: "form-control",
          placeholder: "0" %>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="form-group odds">
      <label><%= t ".odds" %></label>
      <div class="form-inline">
        <%= f.number_field :team1_odds, step: 0.1, min: 0, max:20,
          class: "form-control odds", placeholder: t(".team1_odds") %>
        <%= f.number_field :draw_odds, min: 0, step: 0.1, max:20,
          class: "form-control odds draw-odds", placeholder: t(".draw_odds") %>
        <%= f.number_field :team2_odds, step: 0.1, min: 0, max:20,
          class: "form-control odds", placeholder: t(".team2_odds") %>
      </div>
    </div>

    <div class="submit">
      <%= f.submit t(".submit"), class: "btn btn-primary form-control" %>
    </div>
  <% end %>
</div>
