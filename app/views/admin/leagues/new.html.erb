<div class="col-md-6 col-md-offset-3">
  <%= form_for [:admin, @league] do |f| %>
    <%= render "shared/error_messages", object: @league %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.select(:country_id, @countries, {}, class: "form-control") %>
    </div>
    <div class="form-group">
      <%= f.submit t(".create"), class: "btn btn-success"  %>
    </div>
  <% end %>
</div>
<h1 class="center"><%= t ".manage_league" %></h1>
<div class="new-league form-horizontal">
  <%= form_for [:admin, @league] do |f| %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <%= render "shared/error_messages", object: @league %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :name, class: "control-label col-sm-2" %>
      <div class="col-sm-5">
        <%= f.select(:country_id, @countries, {}, class: "form-control") %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <%= f.submit yield: :summit_button, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
