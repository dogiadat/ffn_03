<h1 class="new-league-heading center"><%= t ".create_league" %></h1>
<hr>
<div class="new-league form-horizontal">
  <%= form_for [:admin, @league] do |f| %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <%= render "shared/error_messages", object: @league %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :country, class: "control-label col-sm-2" %>
      <div class="col-sm-5">
        <%= f.select(:country_id, @countries, {include_blank: t(".select_country")},
          class: "form-control") %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, class: "control-label col-sm-2" %>
      <div class="col-sm-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :founded_at, class: "control-label col-sm-2" %>
      <div class="col-sm-5">
        <%= f.date_field :founded_at, class: "form-control founded_at" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :introduction, class: "control-label col-sm-2" %>
      <div class="col-sm-5">
        <%= f.text_area :introduction, class: "form-control text-area" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <%= f.submit yield: :summit_button, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
