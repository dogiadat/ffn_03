<h1 class="center"><%= t ".add_country" %></h1>
<div class="col-md-6 col-md-offset-3">
  <%= form_for [:admin, @country] do |f| %>
    <div class="form-group">
      <%= f.country_select :code, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit t(".add"), class: "btn btn-success form-control"  %>
    </div>
  <% end %>
  <div class="show-countries">
    <h2><%= t ".country_added" %></h2>
    <ul class="list-group">
      <% @countries.each do |country| %>
        <li class="list-group-item">
          <%= country.name %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
