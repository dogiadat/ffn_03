<h1 class="center"><%= t ".add_country" %></h1>
<div class="new-country form-horizontal">
  <%= form_for [:admin, @country] do |f| %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <%= render "shared/error_messages", object: @country %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :name, class: "control-label col-sm-2" %>
      <div class="col-sm-5">
        <%= f.country_select :code, {include_blank: t(".select_country")},
          class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :flag, class: "control-label col-sm-2" %>
      <div class="col-sm-5">
        <%= f.file_field :flag, accept: "image/jpeg,image/gif,image/png" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <%= f.submit yield: :summit_button, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
