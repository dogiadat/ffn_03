<div class="show-all-countries">
  <h1 class="center"><%= t ".countries_management" %></h1>
  <hr>
  <div class="countries-header">
    <%= link_to new_admin_country_path, class: "btn btn-primary no-radius pull-left" do %>
      <span class="glyphicon glyphicon-plus"></span>
      <span><%= t ".add_new_country" %></span>
    <% end %>
    <%= search_form_for [:admin, @search], class: "form-inline search-form" do |f| %>
      <div class="form-group content">
        <%= f.text_field :name_or_code_cont, class: "form-control",
          placeholder: t(".content") %>
      </div>
      <div class="form-group">
        <%= f.button class: "btn btn-primary no-radius" do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
      </div>
    <% end %>
  </div>
  <table class="table table-striped table-bordered">
    <thead>
      <th class="center">#</th>
      <th class="flag"><%= t ".flag" %></th>
      <th class="name"><%= sort_link @search, :name %></th>
      <th class="league"><%= t ".league" %></th>
      <th class="league-season"><%= t "league_season" %></th>
      <th class="players"><%= t ".player" %></th>
    </thead>
    <tbody>
      <% @countries.each_with_index do |country, index| %>
        <tr>
          <td class="center">
            <%= Settings.country.per_page * (@countries.current_page - 1) + index + 1 %>
          </td>
          <td class="center">
            <%= image_tag country.flag.url, size: Settings.country.size_tiny %>
          </td>
          <td class="name"><%= country.name %></td>
          <td class="center"><%= country.leagues.count %></td>
          <td class="center"><%= country.league_seasons.count %></td>
          <td class="center"><%= country.players.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @countries %>
  <% if @countries.empty? %>
    <div class="no-result"><%= t ".no_country" %></div>
  <% end %>
</div>
