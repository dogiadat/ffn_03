<%= link_to "#edit-player-" + player.id.to_s , data: {toggle: "modal"},
  title: t(".edit_this_player") do %>
  <span class="glyphicon glyphicon-edit"></span>
<% end %>
  <!-- Modal -->
<div class="modal fade" id="edit-player-<%= player.id %>" role="dialog">
  <div class="modal-dialog modal-md">
    <div class="modal-content no-radius">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".edit_player_in_team" %></h4>
      </div>
      <%= form_tag admin_player_assign_players_url(player), class: "form-horizontal",
        remote: true, method: :put do %>
        <div class="modal-body">
          <div id="edit-player-<%= player.id %>-errors">
            <%= render "shared/error_messages", object: player %>
          </div>
          <div class="form-group">
            <%= label_tag :team_name, t(".team_name"), class: "control-label col-sm-4" %>
            <div class="col-sm-6">
              <%= text_field_tag :team_name, @team.name, readonly: true,
                class: "form-control" %>
              <%= hidden_field_tag :team_id, @team.id %>
            </div>
          </div>
          <div class="form-group">
            <%= label_tag :player_name, t(".player_name"), class: "control-label col-sm-4" %>
            <div class="col-sm-6">
              <%= text_field_tag :player_name, player.name, readonly: true,
                class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= label_tag :squad_number, t(".squad_number"), class: "control-label col-sm-4" %>
            <div class="col-sm-3">
              <%= number_field_tag :squad_number, player.squad_number, min: 1, max: 99,
                step: 1, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= label_tag :joined_at, t(".join_date"), class: "control-label col-sm-4" %>
            <div class="col-sm-5">
              <%= date_field_tag :joined_at, player.joined_at, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-5">
              <%= submit_tag t(".edit_player"), class: "btn btn-primary" %>
              <button type="button" class="btn btn-default" data-dismiss="modal">
                <%= t ".cancel" %>
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
