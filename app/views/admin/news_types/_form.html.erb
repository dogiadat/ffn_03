<%= form_for [:admin, @news_type] do |f| %>
  <%= render "shared/error_messages", object: @news_type %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit yield: :submit_button, class: "btn btn-primary form-control" %>
  </div>
<% end %>
