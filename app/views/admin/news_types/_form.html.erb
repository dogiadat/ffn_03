<%= form_for [:admin, @news_type], remote: true do |f| %>
  <%= render "shared/error_messages", object: @news_type %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: t(".holder_news_types"),
      class: "form-control" %>
  </div>
  <div class="form-group">
    <%= link_to t(".cancel_button"), "#", class: "btn btn-default", id: "cancel-form"%>
    <%= f.submit yield: :submit_button, class: "btn btn-primary" %>
  </div>
<% end %>
