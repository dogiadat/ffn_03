<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= t ".content" %></h1>
    <%= form_for [:admin, @news_type] do |f| %>
      <%= render "shared/error_messages", object: @news_type %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit t(".submit_button"), class: "btn btn-primary form-control" %>
      </div>
    <% end %>
  </div>
</div>
