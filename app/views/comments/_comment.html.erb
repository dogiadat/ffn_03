<li id="comment-<%= comment.id %>" class="comment">
  <div class="avatar">
    <%= link_to comment.user do %>
      <%= image_tag comment.user_avatar.small.url %>
    <% end %>
  </div>
  <div class="comment-body">
    <div class="user-name">
      <%= link_to comment.user_name, comment.user %>
      <% if can? :destroy, comment %>
        <span class="dropdown pull-right">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% if can? :update, comment %>
              <li>
                <%= link_to t(".edit"), edit_comment_path(comment),
                  class: "edit-comment" %>
              </li>
            <% end %>
            <li>
              <%= link_to t(".delete"), comment_path(comment), class: "delete-comment",
              data: {confirm: t(".confirm_delete"), id: comment.id} %>
            </li>
          </ul>
        </span>
      <% end %>
    </div>
    <div class="content"><%= comment.content.gsub("\n", "<br>").html_safe %></div>
    <div class="timestamp">
      <%= time_ago_in_words comment.created_at %>
    </div>
  </div>
</li>
