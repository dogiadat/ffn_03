<div id="ranking-table-name">
  <span class="glyphicon glyphicon-list-alt"></span>
  <%= @league_season.name + " " + @league_season.year.to_s + " " + t(".rankings")%>
</div>
<table id="rank-table" class="table table-striped table-bordered">
  <thead>
    <th class="stats"><%= t ".rank" %></th>
    <th><%= t ".team_name" %></th>
    <%= Team.header_for_stats :total_matches, :win_matches, :draw_matches,
      :lose_matches, :goals, :lose_goals, :offset, :score %>
  </thead>
  <tbody>
    <% @rank.each_with_index do |team| %>
      <tr>
        <td class="stats"><%= team.rank %></td>
        <td><%= team.name %></td>
        <%= team.bind_stats :total_matches, :win_matches, :draw_matches,
          :lose_matches, :goals, :lose_goals, :offset, :score %>
      </tr>
    <% end %>
  </tbody>
</table>
