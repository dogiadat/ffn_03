<div class="news-type-container">
  <%= search_form_for @search, url: @news_type,
    class: "form-inline search-form news-type-search" do |f| %>
    <div class="form-group">
      <%= f.search_field :title_or_content_or_brief_description_cont, class: "form-control",
        placeholder: t(".search_news") %>
    </div>
    <div class="form-group">
      <%= f.button class: "btn btn-primary no-radius" do %>
        <span class="glyphicon glyphicon-search"></span>
      <% end %>
    </div>
  <% end %>
  <div class="news-type-name-show">
    <div class="boxed-label"><%= @news_type.name.upcase %></div>
  </div>
  <% if @news.any? %>
    <ul class="list-news-in-type">
      <% @news.each do |news| %>
        <li>
          <div class="news-in-type">
            <div class="represent-image">
              <%= link_to news do %>
                <%= image_tag news.represent_image.url %>
              <% end %>
            </div>
            <div class="title-summary">
              <div class="title">
                <%= link_to news.title, news, class: "link-title" %>
              </div>
              <div class="summary">
                <%= news.brief_description %>
              </div>
            </div>
          </div>
        </li>
        <hr>
      <% end %>
    </ul>
    <%= paginate @news %>
  <% else %>
    <div class="no-result"><%= t ".no_news" %></div>
  <% end %>
</div>
<div class="hot-news type">
  <%= render "news/hot_news" %>
</div>
