<table class="table table-striped table-bordered players-in-group">
  <% @players.each do |position, players| %>
    <tr><td colspan="6" class="position"><%= position %></td></tr>
    <% players.each do |player| %>
      <tr>
        <td class="avatar"><%= image_tag player.avatar.tiny.url %></td>
        <td class="jersey-number"><%= player.jersey_number || "-" %></td>
        <td class="name"><%= link_to player.name, player %></td>
        <td class="country-flag">
          <%= image_tag player.country.flag.url, size: Settings.country.size_small %>
        </td>
        <td class="country-name"><%= player.country.name %></td>
        <td class="date-of-birth"><%= player.date_of_birth %></td>
      </tr>
    <% end %>
  <% end %>
</table>
